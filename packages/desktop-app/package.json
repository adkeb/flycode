{
  "name": "@flycode/desktop-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/main.cjs",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:renderer": "vite",
    "start": "node scripts/start-electron.cjs",
    "build:shared-types": "npm run build -w @flycode/shared-types",
    "build:renderer": "vite build --base ./",
    "build:service-bundle": "node scripts/build-local-service.mjs",
    "build:app": "npm run build:shared-types && npm run build:renderer && npm run build:service-bundle",
    "build": "npm run build:app",
    "pack": "npm run build:app && electron-builder --dir",
    "dist": "npm run build:app && electron-builder",
    "dist:win": "npm run build:app && electron-builder --win nsis portable -c.win.signAndEditExecutable=false",
    "dist:win:portable": "npm run build:app && electron-builder --win portable -c.win.signAndEditExecutable=false",
    "dist:win:dir": "npm run build:app && electron-builder --win dir -c.win.signAndEditExecutable=false",
    "dist:linux": "npm run build:app && electron-builder --linux AppImage deb",
    "typecheck": "echo \"desktop-app: no typecheck configured\"",
    "test": "echo \"desktop-app: no tests configured\""
  },
  "dependencies": {
    "@mantine/core": "^7.15.2",
    "@mantine/hooks": "^7.15.2",
    "@tabler/icons-react": "^3.31.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "33.2.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.0",
    "vite": "^6.0.5"
  },
  "build": {
    "appId": "com.flycode.desktop",
    "productName": "FlyCode Desktop",
    "files": [
      "src/main.cjs",
      "src/renderer/dist/**/*",
      "dist/local-service/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "dist/local-service/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "FlyCode-Desktop-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "electronVersion": "33.2.1"
  }
}
